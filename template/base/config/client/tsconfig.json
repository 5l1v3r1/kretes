{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "allowJs": false,
    "outDir": "../../.build",
    "rootDir": "../../",
    "baseUrl": "../..",
    "strict": true,
    "moduleResolution": "node",
    "paths": {
      "*": [
        "features/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "../../features/**/View/*.ts",
    "../../features/**/View/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
