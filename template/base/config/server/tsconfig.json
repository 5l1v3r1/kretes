{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "allowJs": false,
    "outDir": "../../.build",
    "rootDir": "../../",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "../..",
    "paths": {
      "*": [
        "features/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "../../features/**/Controller/**.ts",
  ]
}
