{
  "private": true,
  "scripts": {
    "client": "VUE_CLI_SERVICE_CONFIG_PATH=$PWD/config/client/vue.config.js vue-cli-service serve config/client/index.ts",
    "build": "tsc && vue-cli-service build config/client/index.ts",
    "server": "ROARR_LOG=true huncwot server | npx roarr pretty-print",
    "start": "stmux -w always -e ERROR -m beep,system -- [ -t 'Client: Vue.js' 'npm run client' .. -t 'Server' 'huncwot server' ]",
    "migrate": "node-pg-migrate -m db/migrations"
  },
  "dependencies": {
    "huncwot": "0.49.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "@wessberg/rollup-plugin-ts": "^1.1.78",
    "cross-env": "^6.0.3",
    "node-pg-migrate": "^3.23.3",
    "stmux": "^1.7.1",
    "typescript": "^3.7.2",
    "prettier": "^1.18.2",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-serve": "^1.0.1"
  }
}
